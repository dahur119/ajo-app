{
  "title": "API Gateway â€“ Detailed",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-6h", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "Request Rate (req/s)",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_requests_total[5m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "4xx / 5xx Rates",
      "gridPos": { "x": 8, "y": 0, "w": 16, "h": 6 },
      "legend": { "show": true },
      "targets": [
        { "refId": "A", "expr": "sum(rate(http_response_class_total{status_class=\"4xx\"}[5m]))" },
        { "refId": "B", "expr": "sum(rate(http_response_class_total{status_class=\"5xx\"}[5m]))" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Inbound P95 Latency (s)",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 6 },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_request_duration_seconds_bucket[5m])))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Outbound P95 Latency (s)",
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 6 },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_outbound_duration_seconds_bucket[5m])))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Outbound Requests by Host (req/s)",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 },
      "legend": { "show": true },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_outbound_requests_total[5m])) by (host)"
        }
      ]
    }
  ]
}